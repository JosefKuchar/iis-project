package template

import (
	"JosefKuchar/iis-project/models"
  "strconv"
)

type CreateEventData struct {
  Categories []models.Category
  Locations []models.Location
}

templ CreateEvent(data CreateEventData) {
	@Index("Nová událost") {
		<div id="create_event">
			<div class="mt-10 flex flex-col items-center space-y-4">
				<h1 class="text-center text-3xl font-semibold">Vytvořit událost</h1>
				<form hx-post="/create-event" hx-target="#create_event" class="max-w-xl w-full flex flex-col gap-4">
					<div>
						<p class="text-sm text-stone-500">1. Detaily</p>
						<progress class="progress w-full" value="25" max="100"></progress>
					</div>
					<div class="form-control">
						<label class="label"><span class="label-text">Název</span></label>
						<input type="text" name="name" required id="name" class="input input-bordered text-sm"/>
					</div>
					<div class="form-control">
						<label class="label label-text">Kapacita (Vynechte pro neobmedzenou)</label>
						<input class="textarea textarea-bordered text-sm" placeholder="Neobmedzená" name="capacity" id="capacity" type="number" />
					</div>
					<div class="form-control">
						<label class="label label-text">Popis</label>
						<textarea class="textarea textarea-bordered h-24" required name="description" id="description"></textarea>
					</div>
					<div class="grid grid-cols-2 gap-4">
						<div class="form-control">
							<label class="label label-text">Od</label>
							<input type="datetime-local" required class="input input-bordered" name="from" id="from"/>
						</div>
						<div class="form-control">
							<label class="label label-text">Do</label>
							<input type="datetime-local" required class="input input-bordered" name="to" id="to"/>
						</div>
					</div>
					<button class="btn btn-primary">Pokračovat</button>
				</form>
			</div>
		</div>
	}
}

type CreateEventLocationData struct {
  EventID string
  Locations []models.Location
}

templ CreateEventLocation(data CreateEventLocationData) {
	<div class="mt-10 flex flex-col items-center space-y-4 max-w-xl mx-auto">
		<h1 class="text-center text-3xl font-semibold">Vytvořit událost</h1>
		<form hx-target="#create_event" id="select_location_form" hx-post={ "/create-event/" + data.EventID + "/location" } class="max-w-xl w-full flex flex-col gap-4">
			<div>
				<p class="text-sm text-stone-500">2. Lokalita</p>
				<progress class="progress w-full" value="50" max="100"></progress>
			</div>
			<div class="form-control">
				<label for="location" class="label label-text">Vyberte lokalitu</label>
				<select class="select select-bordered" name="location" id="location">
					<option value="0">Vyberte lokalitu</option>
					for _, location := range data.Locations {
						<option value={ strconv.Itoa(int(location.ID)) }>{ location.Name }</option>
					}
				</select>
			</div>
		</form>
		<div class="flex items-center justify-between w-full">
			<button class="btn btn-secondary" onclick="create_location.showModal()">Navrhnout lokalitu</button>
			<button type="submit" form="select_location_form" class="btn btn-primary">Pokračovat</button>
		</div>
	</div>
	<dialog id="create_location" class="modal">
		<div class="modal-box">
			<h3 class="font-bold text-lg">Navrhnout lokalitu</h3>
			<form action="POST" hx-target="#create_event" hx-post={ "/create-event/" + data.EventID + "/new-location" }>
				<div class="grid grid-cols-2 gap-4">
					<div class="form-control flex-1 col-span-2">
						<label class="label label-text">Název</label>
						<input required class="input input-bordered" required name="name" id="new_location_name"	/>
					</div>
					<div class="form-control flex-1 col-span-2">
						<label class="label label-text">Ulice</label>
						<input required class="input input-bordered" required name="street" id="new_location_street"	/>
					</div>
					<div class="form-control flex-1">
						<label class="label label-text">PSČ</label>
						<input required class="input input-bordered" required name="zip" id="new_location_zip"	/>
					</div>
					<div class="form-control flex-1">
						<label class="label label-text">Město</label>
						<input required class="input input-bordered" required name="city" id="new_location_city"	/>
					</div>
				</div>
				<div class="flex w-full mt-6 justify-end">
					<button type="submit" class="btn btn-primary">Odoslat</button>
				</div>
			</form>
		</div>
		<form method="dialog" class="modal-backdrop">
			<button></button>
		</form>
	</dialog>
}

type CreateEventCategoryData struct {
  EventID string
  Categories []models.Category
}

templ CreateEventCategory(data CreateEventCategoryData) {
	<div class="mt-10 flex flex-col items-center space-y-4 max-w-xl mx-auto">
		<h1 class="text-center text-3xl font-semibold">Vytvořit událost</h1>
		<form id="select_category_form" hx-target="#create_event" hx-post={ "/create-event/" + data.EventID + "/category" } class="max-w-xl w-full flex flex-col gap-4">
			<div>
				<p class="text-sm text-stone-500">3. Kategorie</p>
				<progress class="progress w-full" value="75" max="100"></progress>
			</div>
			<div class="form-control">
				<label for="category" class="label label-text">Vyberte kategorie</label>
				<select class="select select-bordered" name="category" id="category" multiple>
					for _, category := range data.Categories {
						<option value={ strconv.Itoa(int(category.ID)) }>{ category.Name }</option>
					}
				</select>
			</div>
		</form>
		<div class="flex items-center justify-between w-full">
			<button class="btn btn-secondary" onclick="create_category.showModal()">Navrhnout kategorii</button>
			<button type="submit" form="select_category_form" class="btn btn-primary">Pokračovat</button>
		</div>
	</div>
	<dialog id="create_category" class="modal">
		<div class="modal-box">
			<h3 class="font-bold text-lg">Navrhnout kategorii</h3>
			<form action="POST" hx-target="#create_event" hx-post={ "/create-event/" + data.EventID + "/new-category" }>
				<div class="grid grid-cols-2 gap-4">
					<div class="form-control flex-1">
						<label class="label label-text">Název</label>
						<input required class="input input-bordered" required name="name" id="new_category_name"	/>
					</div>
					<div class="form-control flex-1">
						<label class="label label-text">Kategorie</label>
						<select class="select select-bordered" required name="category" id="new_category_parent">
							for _, category := range data.Categories {
								<option value={ strconv.Itoa(int(category.ID)) }>{ category.Name }</option>
							}
						</select>
					</div>
				</div>
				<div class="flex w-full mt-6 justify-end">
					<button type="submit" class="btn btn-primary">Odoslat</button>
				</div>
			</form>
		</div>
		<form method="dialog" class="modal-backdrop">
			<button>Close</button>
		</form>
	</dialog>
}

type CreateEventFeesData struct {
  EventID string
  EntranceFees []models.EntranceFee
}

templ CreateEventFees(data CreateEventFeesData) {
	<div class="mt-10 flex flex-col items-center space-y-4">
		<h1 class="text-center text-3xl font-semibold">Vytvořit událost</h1>
		<div class="max-w-xl w-full flex flex-col gap-4">
			<div>
				<p class="text-sm text-stone-500">4. Vstupy</p>
				<progress class="progress w-full" value="100" max="100"></progress>
			</div>
			<div id="create_fees">
				@EventFeesForm(data)
			</div>
		</div>
	</div>
}

templ EventFeesForm(data CreateEventFeesData) {
	<div class="flex flex-col gap-4">
		for _, entranceFee := range data.EntranceFees {
			<div class="p-4 rounded-xl border border-stone-200 flex justify-between items-center">
				<div class="text-sm font-semibold">
					{ entranceFee.Name }
				</div>
				<div class="text-sm">
					{ strconv.Itoa(int(entranceFee.Price)) + " CZK" }
				</div>
			</div>
		}
	</div>
	<form class="flex gap-4 items-end" hx-post={ "/create-event/" + data.EventID + "/fees" } hx-target="#create_fees" hx-on::after-request="this.reset()">
		<div class="form-control flex-1">
			<label class="label label-text">Název</label>
			<input type="text" required class="input input-bordered" name="name" id="name"/>
		</div>
		<div class="form-control flex-1">
			<label class="label label-text">Cena</label>
			<input type="number" required class="input input-bordered" name="price" id="price"/>
		</div>
		<button class="btn btn-secondary">Přidat</button>
	</form>
	<button class="btn btn-primary mt-4 w-full" hx-post="/create-event/finish" disabled?={ len(data.EntranceFees) == 0 }>Finish</button>
}

